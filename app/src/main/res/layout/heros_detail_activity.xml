<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/heros_detail_title"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="@color/blue"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/heros_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="英雄"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:paddingBottom="14dp"
            android:paddingTop="0dp"
            android:paddingStart="14dp"
            android:paddingEnd="0dp"/>

        <TextView
            android:id="@+id/heros_detail_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="法师"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:paddingBottom="14dp"
            android:paddingTop="0dp"
            android:paddingStart="0dp"
            android:paddingEnd="14dp"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/heros_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/heros_detail_title">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/heros_image_info"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <ImageView
                        android:id="@+id/heros_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:src="@drawable/splash"
                        android:scaleType="centerCrop"
                        tools:ignore="ContentDescription" />
                </RelativeLayout>

                <!-- 分割线 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/white"/>

                <LinearLayout
                    android:id="@+id/heros_data_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/widget_shape"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/heros_health_value"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:textSize="16sp"
                            android:text="生命值" />

                        <!-- 分割线 -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@color/white"/>

                        <TextView
                            android:id="@+id/heros_magic_point_value"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:textSize="16sp"
                            android:text="魔法值"/>

                        <!-- 分割线 -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@color/white"/>

                        <TextView
                            android:id="@+id/heros_physical_attack_value"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:textSize="16sp"
                            android:text="物理攻击"/>

                        <!-- 分割线 -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@color/white"/>

                        <TextView
                            android:id="@+id/heros_magic_attack_value"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:textSize="16sp"
                            android:text="法术强度"/>

                        <!-- 分割线 -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@color/white"/>

                        <TextView
                            android:id="@+id/heros_physical_defense_value"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:textSize="16sp"
                            android:text="物理防御"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/heros_magic_defense_value"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:textSize="16sp"
                            android:text="魔法抗性"/>

                        <!-- 分割线 -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@color/white"/>

                        <TextView
                            android:id="@+id/heros_crit_value"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:textSize="16sp"
                            android:text="暴击"/>

                        <!-- 分割线 -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@color/white"/>

                        <TextView
                            android:id="@+id/heros_attack_speed_value"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:textSize="16sp"
                            android:text="攻击速度"/>

                        <!-- 分割线 -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@color/white"/>

                        <TextView
                            android:id="@+id/heros_attack_range_value"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:textSize="16sp"
                            android:text="攻击范围"/>

                        <!-- 分割线 -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@color/white"/>

                        <TextView
                            android:id="@+id/heros_movement_speed_value"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:textSize="16sp"
                            android:text="移动速度"/>
                    </LinearLayout>
                </LinearLayout>
                <!-- 分割线 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/widget_shape">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="背景"
                        android:textSize="16sp"
                        android:id="@+id/textView" />
                </LinearLayout>

                <!-- 分割线 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/white"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/widget_shape">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="技能"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <!-- 分割线 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/splash"
                            android:scaleType="centerCrop" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentStart="true"
                                android:textSize="18sp"
                                android:paddingTop="14dp"
                                android:paddingBottom="0dp"
                                android:paddingStart="14dp"
                                android:paddingEnd="0dp"
                                android:text="被动"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:paddingBottom="14dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="快捷键"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="冷却时间"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="技能消耗"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>