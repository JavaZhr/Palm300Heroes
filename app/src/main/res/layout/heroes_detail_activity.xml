<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/heroes_detail_title"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@color/blue"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/heroes_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="英雄"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:paddingBottom="14dp"
            android:paddingTop="0dp"
            android:paddingStart="14dp"
            android:paddingEnd="0dp"/>

        <TextView
            android:id="@+id/heroes_detail_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="法师"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:paddingBottom="14dp"
            android:paddingTop="0dp"
            android:paddingStart="0dp"
            android:paddingEnd="14dp"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/heroes_detail_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@id/heroes_detail_title">
        <TextView
            android:id="@+id/heroes_detail_data"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/blue"
            android:text="@string/data"
            android:textSize="16sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/heroes_detail_skill"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/blue"
            android:text="@string/skill"
            android:textSize="16sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/heroes_detail_skin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/blue"
            android:text="@string/skin"
            android:textSize="16sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/heroes_detail_sound"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/blue"
            android:text="@string/sound"
            android:textSize="16sp"
            android:textColor="@color/white" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/heroes_detail_tab">

        <android.support.v4.view.ViewPager
            android:id="@+id/heroes_detail_viewpager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:flipInterval="30"
            android:persistentDrawingCache="animation" />
    </RelativeLayout>

</RelativeLayout>